{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-web",
      "type": "npm",
      "script": "dev",
      "path": "web-ui",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (error|warning) (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "ready in"
        }
      }
    },
    {
      "label": "build-api",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "api-server", "./cmd/main.go"],
      "options": {
        "cwd": "${workspaceFolder}/api-server"
      },
      "group": "build",
      "problemMatcher": ["$go"]
    },
    {
      "label": "test-api",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "options": {
        "cwd": "${workspaceFolder}/api-server"
      },
      "group": "test",
      "problemMatcher": ["$go"]
    },
    {
      "label": "install-deps",
      "type": "shell",
      "command": "make",
      "args": ["install-deps"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "helm-lint",
      "type": "shell",
      "command": "helm",
      "args": ["lint", "./deploy/charts/bison"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}